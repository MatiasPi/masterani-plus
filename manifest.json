{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "Masterani Plus",
  "description": "Masterani Anime helper extension. It tracks the anime you watch, and it remembers the last episode you watched of each show.",
  "author": "Matias Pierdomenico",
  "version": "1.3.1",
  "content_scripts": [
    {
      "matches": ["https://www.masterani.me/anime/watch/*"],
      "js": ["scripts/contentscript.js"],
      "match_about_blank": true,
      "all_frames": true,
      "run_at": "document_idle"
    },
    {
      "matches": ["https://mp4upload.com/*"],
      "js": ["scripts/mp4.js"],
      "match_about_blank": true,
      "all_frames": true,     
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://www.masterani.me/*",
    "https://mp4upload.com/*"
  ],
  "icons": { 
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon-19.png",
      "38": "icons/icon-38.png"
    },
    "default_popup": "popup.html",
    "default_title": "Your Anime"
  },
  "options_ui": {
    "page": "options.html"
  },
  "web_accessible_resources": ["styles/theatermode.css"]
}